<p id="notice"><%= notice %></p>

<p>
  <strong>Event:</strong>
  <%= @event.event_name %>
</p>

<p>
  <strong>Organizer:</strong>
  <%= @organizer.full_name %>
</p>


  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("offer_box.box_name") %></th>
          <th><%= t("offer_box.quantity") %></th>
        </tr>
      </thead>
    
      <% @thisofferboxes.each do |thisofferbox| %>
        <tbody>
          <tr>
        	<td><%= thisofferbox.box.box_name if thisofferbox.box %>
        		<%= link_to edit_offer_box_path(thisofferbox) do %>
              <span class="glyphicon glyphicon-pencil btn btn-default btn-xs" aria-hidden="true"></span>
            <% end %>
          </td>
        	<td><%= thisofferbox.quantity if thisofferbox.quantity %></td>

              
          </td>
          <td><%= link_to t("offer_box.destroy"), thisofferbox, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("offer_article.article_name") %></th>
          <th><%= t("offer_article.quantity") %></th>
        </tr>
      </thead>
    
      <% @thisofferarticles.each do |thisofferarticle| %>
        <tbody>
          <tr>
        	<td><%= thisofferarticle.article.article_name if thisofferarticle.article %>
        		<%= link_to edit_offer_article_path(thisofferarticle) do %>
              <span class="glyphicon glyphicon-pencil btn btn-default btn-xs" aria-hidden="true"></span>
            <% end %>
          </td>
        	<td><%= thisofferarticle.quantity if thisofferarticle.quantity %></td>

              
          </td>
          <td><%= link_to t("offer_article.destroy"), thisofferarticle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

    <div class="container-fluid">
      <div class="row">

        <%= simple_form_for(@new_offer_box) do |f| %>
          <%= f.error_notification %>

          
          	<%= f.hidden_field :offer_id, :value => @offer.id %>
             <div class="col-md-3">
              <%= f.label :box_id %>
              <%= f.collection_select :box_id, Box.all.order('box_name ASC'), :id, :box_name, {prompt: false}, {class: "form-control styled-select"} %>
            </div>
            <div class="col-md-3">
              <%= f.input :quantity %>
            </div>

            <div class="col-md-3">
              <br>
              <%= f.button :submit, class: "btn btn-success" %>
            </div>
        <% end %>
      </div>
    </div><br>

    <div class="container-fluid">
      <div class="row">

        <%= simple_form_for(@new_offer_article) do |f| %>
          <%= f.error_notification %>

          
          	<%= f.hidden_field :offer_id, :value => @offer.id %>
             <div class="col-md-3">
              <%= f.label :article_id %>
              <%= f.collection_select :article_id, Article.all.order('article_name ASC'), :id, :article_name, {prompt: false}, {class: "form-control styled-select"} %>
            </div>
            <div class="col-md-3">
              <%= f.input :quantity %>
            </div>

            <div class="col-md-3">
              <br>
              <%= f.button :submit, class: "btn btn-success" %>
            </div>
        <% end %>
      </div>
    </div><br>
<%= link_to 'Edit', edit_offer_path(@offer) %> |
