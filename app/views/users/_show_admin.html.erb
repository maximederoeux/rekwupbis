

  <ul class="list-group">

    <li class="list-group-item">
      <div class="row">

        <div class="col-md-6">
          <strong><%= t("user.name") %> : </strong><%= @user.name if @user.name %>
        </div>
        <div class="col-md-6">
          <strong><%= t("user.first_name") %> : </strong><%= @user.first_name if @user.first_name %>
        </div>

      </div>
    </li>

    <li class="list-group-item list-group-item-info">

    <h5><strong><%= t("user.your_profile") %>

      <% if @user.staff %>
       - <%= t("user.list_staff") %>
      <% end %>

      <% if @user.individual %>
       - <%= t("user.individual") %>
      <% end %>

      <% if @user.company %>
       - <%= t("user.company") %>
      <% end %>

      <% if @user.non_profit %>
       - <%= t("user.non_profit") %>
      <% end %>

      <% if @user.institution %>
       - <%= t("user.institution") %>
      <% end %>

      </strong></h5>

    </li>

    <li class="list-group-item">
      <div class="row">
        <strong>
          <div class="col-md-2">
            <%= t("user.staff") %>
          </div>
          <div class="col-md-2">
            <% if @user.fixed %>
              <%= t("user.fixed") %>
            <% end %>
          </div>
          <div class="col-md-2 text-center">
            <% if @user.time_per_week.present? %>
              <%= t("user.time_per_week") %><br>
              <%= @user.time_per_week %>
            <% end %>
          </div>
          <div class="col-md-2">
            <% if @user.interim %>
              <%= t("user.interim") %>
            <% end %>
          </div>
          <div class="col-md-2">
            <% if @user.leader %>
              <%= t("user.leader") %>
            <% end %>
          </div>

          <div class="col-md-2">
            <% if @user.time_keeping %>
              <%= t("user.time_keeping") %>
            <% end %>
          </div>

        </strong>
      </div>
    </li>


    <li class="list-group-item">
      <strong><%= t("user.email") %> : </strong><%= @user.email %>
    </li>

    <li class="list-group-item">
      <div class="row">

        <div class="col-md-6">

          <% if @user.company %>
            <strong><%= t("user.company_name") %> : </strong><%= @user.company_name %>
          <% end %>

          <% if @user.non_profit %>
            <strong><%= t("user.non_profit_name") %> : </strong><%= @user.company_name %>
          <% end %>

          <% if @user.institution %>
            <strong><%= t("user.institution_name") %> : </strong><%= @user.company_name %>
          <% end %>
        </div>



        <div class="col-md-4">
          <strong><%= t("user.vat") %> : </strong><%= @user.vat %>
        </div>

        <div class="col-md-2">
          <% if @user.negociated_price %>
          <strong><%= t("user.negociated_price") %></strong>
          <% end %>
        </div>


      </div>
     </li>
     

    <li class="list-group-item">
      <div class="row">

        <div class="col-md-5">
          <strong><%= t("user.address") %> : </strong><%= @user.address %>
        </div>

        <div class="col-md-2">
          <strong><%= t("user.postcode") %> : </strong><%= @user.postcode %>
        </div>

        <div class="col-md-3">
          <strong><%= t("user.city") %> : </strong><%= @user.city %>
        </div>

        <div class="col-md-2">
          <strong><%= t("user.country") %> : </strong><%= @user.country %>
        </div>

      </div>
    </li>
     
    <li class="list-group-item">
      <div class="row">

        <div class="col-md-6">
          <strong><%= t("user.phone") %> : </strong><%= @user.phone %>
        </div>

        <div class="col-md-6">
          <strong><%= t("user.gsm") %> : </strong><%= @user.gsm %>
        </div>

      </div>
    </li>

    <% if @user.is_lln %>

      <li class="list-group-item list-group-item-warning">
        <strong><%= t("user.is_lln") %></strong>
      </li>

      <li class="list-group-item">
        <div class="row">

          <div class="col-md-6">
            <strong><%= t("user.lln_id") %> : </strong><%= @user.lln_id %>
          </div>

          <div class="col-md-6">         
          </div>
        </div>
      </li>

    <% elsif @user.is_namur %>

      <li class="list-group-item list-group-item-warning">
        <strong><%= t("user.is_namur") %></strong>
      </li>


    <% end %>

    
</ul>


    <div class="row">

      <div class="col-md-6">
        <%= link_to t("menu.back"), users_path, class: "btn btn-lg btn-block btn-default" %>
      </div>

      <div class="col-md-6">
        <%= link_to t("menu.edit"), edit_user_path(@user), class: "btn btn-lg btn-block btn-info" %>
      </div>
      
    </div>