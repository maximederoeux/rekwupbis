<div class="reference">
  <h4><strong>
    <%= @invoice.pdf_name %>
  </h4></strong>
</div>

<div class="doc-date">
    Ciney, le <%= @invoice.created_at.strftime("%d/%m/%Y") %>
</div>

<div class="client-block">
  <strong>Client:</strong><br>
    <%= @invoice.client.company_name if @invoice.client.company_name %><br>
    <%= @invoice.client.full_name %><br>
    <%= @invoice.client.address %><br>
    <%= @invoice.client.country %> <%= @invoice.client.postcode %> <%= @invoice.client.city %><br>
    <%= @invoice.client.vat if @invoice.client.vat %><br>
</div>

<div class="object">
  <strong>Objet:</strong><br>
    <%= @invoice.offer.event.event_name %>
</div>

<div class="client-block">
  <strong>Livraisons et retours</strong>
</div>


<table class="article">

  <tr>
    <th>Caisses</th>
    <th class="text-center">Envoyées</th>
    <th class="text-center">Retours Propres</th>
    <th class="text-center">Retours Sales</th>
    <th class="text-center">Retours Scellées Sales</th>
    <th class="text-center">Total Retour</th>
    <th class="text-center">Différence</th>
  </tr>

<% @boxes.each do |box| %>
<% if @invoice.sent_boxes(box) >= 1 or @invoice.total_return(box) >= 1 %>

  <tr>
    <td><%= box.box_name %></td>
    <td class="text-center"><%= @invoice.sent_boxes(box) %></td>
    <td class="text-center"><%= @invoice.return_clean(box) %></td>
    <td class="text-center"><%= @invoice.return_dirty(box) %></td>
    <td class="text-center"><%= @invoice.return_sealed(box) %></td>
    <td class="text-center"><%= @invoice.total_return(box) %></td>
    <td class="text-center"><%= @invoice.difference_delivery(box) %></td>
  </tr>
  
<% end %>
<% end %>

</table>

<hr>
<div class="client-block">
  <strong>Détail Facture</strong>
</div>
<table class="article">

  <tr>
    <th>Articles</th>
    <th>Qtté</th>
    <th>Prix U.</th>
    <th>Total HTVA</th>
    <th>TVA</th>
    <th>Total TVAC</th>
  </tr>

  <tr>
    <td><strong>Lavés</strong></td>
  </tr>

    <% @articles.each do |article| %>

      <% if @invoice.offer.sent_article(article) >= 1 or @invoice.total_back(article) >= 1 %>

        <% unless @invoice.washed_total(article) == 0 %>

        <tr>
          <td><%= article.article_name %></td>
          <td><%= @invoice.washed_total(article) %></td>
          <td><%= number_to_currency(@invoice.right_wash_price(article), :unit => "€", :precision => 3) %></td>
          <td><%= number_to_currency(@invoice.washed_htva(article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.washed_tva(article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.washed_tvac(article), :unit => "€", :precision => 2) %></td>

        </tr>

        <% end %>
      <% end %>
    <% end %>

  <tr>
    <td><strong>Lavage manuel</strong></td>
  </tr>

    <% @articles.each do |article| %>

      <% if @invoice.offer.sent_article(article) >= 1 or @invoice.total_back(article) >= 1 %>

        <% unless @invoice.handling_total(article) == 0 %>

        <tr>
          <td><%= article.article_name %></td>
          <td><%= @invoice.handling_total(article) %></td>
          <td><%= number_to_currency(@invoice.right_handling_price(article), :unit => "€", :precision => 3) %></td>
          <td><%= number_to_currency(@invoice.handling_htva(article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.handling_tva(article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.handling_tvac(article), :unit => "€", :precision => 2) %></td>

        </tr>

        <% end %>
      <% end %>
    <% end %>

  <tr>
    <td><strong>Manutention</strong></td>
  </tr>

    <% @articles.each do |article| %>

      <% if @invoice.offer.sent_article(article) >= 1 or @invoice.total_back(article) >= 1 %>

        <% unless @invoice.very_dirty_total(article) == 0 %>

        <tr>
          <td><%= article.article_name %></td>
          <td><%= @invoice.very_dirty_total(article) %></td>
          <td><%= number_to_currency(@invoice.right_handwash_price(article), :unit => "€", :precision => 3) %></td>
          <td><%= number_to_currency(@invoice.handwash_htva(article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.handwash_tva(article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.handwash_tvac(article), :unit => "€", :precision => 2) %></td>

        </tr>

        <% end %>
      <% end %>
    <% end %>

  <tr>
    <td><strong>Manquants et cassés</strong></td>
  </tr>

    <% @articles.each do |article| %>

      <% if @invoice.offer.sent_article(article) >= 1 or @invoice.total_back(article) >= 1 %>

        <% unless @invoice.missing_and_broken(article) == 0 %>

        <tr>
          <td><%= article.article_name %></td>
          <td><%= @invoice.missing_and_broken(article) %></td>
          <td><%= number_to_currency(@invoice.right_deposit_price(article), :unit => "€", :precision => 3) %></td>
          <td><%= number_to_currency(@invoice.deposit_htva(article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.deposit_tva(article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.deposit_tvac(article), :unit => "€", :precision => 2) %></td>

        </tr>

        <% end %>
      <% end %>
    <% end %>

  <tr>
    <td><strong>Autres frais</strong></td>
  </tr>

    <% @invoice.offer.offer_articles.each do |offer_article| %>

        <tr>
          <td><%= offer_article.article.article_name %></td>
          <td><%= offer_article.quantity %></td>
          <td><%= number_to_currency(@invoice.right_offer_article_price(offer_article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.offer_article_htva(offer_article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.offer_article_tva(offer_article), :unit => "€", :precision => 2) %></td>
          <td><%= number_to_currency(@invoice.offer_article_tvac(offer_article), :unit => "€", :precision => 2) %></td>

        </tr>



    <% end %>



  <tr>
    <strong>
      <th><strong>TOTAUX</strong></th>
      <th></th>
      <th></th>
      <th><%= number_to_currency(@invoice.total_htva_final, :unit => "€", :precision => 2) %></th>
      <th><%= number_to_currency(@invoice.total_tva_final, :unit => "€", :precision => 2) %></th>
      <th><%= number_to_currency(@invoice.total_tvac_final, :unit => "€", :precision => 2) %></th>
    </strong>

  </tr>
</table>


