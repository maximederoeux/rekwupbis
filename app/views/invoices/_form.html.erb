<%= simple_form_for(@invoice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :doc_number %>
    <%= f.input :offer_id %>
    <%= f.input :client_id %>
    <%= f.input :doc_invoice %>
    <%= f.input :doc_credit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
