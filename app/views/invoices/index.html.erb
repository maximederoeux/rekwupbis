
<% @confirmed.each do |offer| %>

  <% if offer.delivery.return_boxes.any? && offer.delivery.sortings.any? && offer.delivery.sortings.first.end_time.present? && offer.delivery.washes.first.end_time.present? %>

    Nom Event <%= offer.event.event_name %><br>
    Organizer <%= offer.organizer.full_name %><br>


    Delivery date <%= offer.delivery.gone_time.strftime("%d/%m/%Y - %H:%M") if offer.delivery.gone_time.present? %><br>


    Returns : <%= offer.return_boxes.count %><br>

    Washes : <%= offer.washes.count %><br>

    End last Wash : <%= offer.washes.last.end_time.strftime("%d/%m/%Y - %H:%M") %><br>


    Sortings : <%= offer.sortings.count %><br>

    End last Sorting : <%= offer.sortings.last.end_time.strftime("%d/%m/%Y - %H:%M") %><br>


  <hr>
  Clean<br>

  <% offer.sorting_details.clean.each do |detail| %>

  <%= detail.article.full_name %>
  <%= detail.total_cups %>

  <%= detail.article.prices.last.washing if detail.article.prices.last.washing.present? %>

  <%= detail.total_cups * detail.article.prices.last.washing if detail.article.prices.last.washing.present? %><br>

  <% end %>

  <hr>

  <% offer.sorting_details.very_dirty.each do |detail| %>

    <%= detail.article_id %>



  <% end %>

  <% end %>

<% end %>
