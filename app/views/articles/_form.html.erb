<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :article_name %>
    <%= f.input :article_content %>
    <%= f.input :article_type %>
    <%= f.input :article_category %>
    <%= f.input :quantity_bigbox %>
    <%= f.input :quantity_smallbox %>
    <%= f.input :quantity_pile %>
    <%= f.input :rekwup_cup %>
    <%= f.input :is_washable %>
    <%= f.input :washing_price %>
    <%= f.input :handwash_price %>
    <%= f.input :tab_price %>
    <%= f.input :deposit_price %>
    <%= f.input :sell_price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %><br>
<%= link_to t("menu.cancel"), articles_path, class: "btn btn-warning" %>

