<ul class="list-group">
  <li class="list-group-item list-group-item-warning">
    Consommation énergétique
  </li>

  <% if Energy.all.last.created_at.strftime("%d/%m/%Y") == Time.now.strftime("%d/%m/%Y") %>

    <h4>Déjà encodé pour aujourd'hui</h4>

  <% else %>

  <%= simple_form_for(@new_energy) do |f| %>
    <%= f.error_notification %>

    <li class="list-group-item">
      <div class="row">
        <div class="col-md-4">
          <%= f.input :water %>
        </div>
          
        <div class="col-md-4">
          <%= f.input :gaz %>
        </div>

        <div class="col-md-4">
          <%= f.input :electricity %>
        </div>
      </div>
    </li>
  </ul>
    
      <%= f.button :submit, class: "btn btn-lg btn-block btn-info" %>

  <% end %>
  <% end %>


<ul class="list-group more-padding">
  <li class="list-group-item list-group-item-warning">
    Consommation énergétique
  </li>


    <% @energies.each do |energy| %>

  <li class="list-group-item">
    <div class="row">
      <div class="col-md-3">
        <%= energy.created_at.strftime("%d/%m/%Y") if energy.created_at %>
      </div>

      <div class="col-md-3">
        <%= energy.water %>
      </div>
        
      <div class="col-md-3">
        <%= energy.gaz %>
      </div>

      <div class="col-md-3">
        <%= energy.electricity %>
      </div>
    </div>
  </li>
  <% end %>
</ul>
        
        
        

