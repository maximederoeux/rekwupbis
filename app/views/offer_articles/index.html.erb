<p id="notice"><%= notice %></p>

<h1>Listing Offer Articles</h1>

<table>
  <thead>
    <tr>
      <th>Offer</th>
      <th>Article</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offer_articles.each do |offer_article| %>
      <tr>
        <td><%= offer_article.offer_id %></td>
        <td><%= offer_article.article_id %></td>
        <td><%= offer_article.quantity %></td>
        <td><%= link_to 'Show', offer_article %></td>
        <td><%= link_to 'Edit', edit_offer_article_path(offer_article) %></td>
        <td><%= link_to 'Destroy', offer_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

