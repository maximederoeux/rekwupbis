<div class="col-md-6">

	<ul div class="list-group">



			<li class="list-group-item list-group-item-info">
				<strong><%= current_user.full_name %></strong>
			</li>

				<% if current_user.attendances.last_monday.any? %>

					<li class="list-group-item">
						<div class="row">
							<div class="col-md-6">
								Lundi <%= 6.days.ago.beginning_of_week.strftime("%d/%m/%Y") %>
							</div>
							<div class="col-md-6 text-center">
								<%= current_user.attendances.last_monday.first.display_last_monday_duration %>
							</div>
						</div>

					</li>

				<% end %>

				<% if current_user.attendances.last_tuesday.any? %>

					<li class="list-group-item">
						<div class="row">
							<div class="col-md-6">
								Mardi <%= (6.days.ago.beginning_of_week + 1.day).strftime("%d/%m/%Y") %>
							</div>
							<div class="col-md-6 text-center">
								<%= current_user.attendances.last_tuesday.first.display_last_tuesday_duration %>
