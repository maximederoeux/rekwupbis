<p id="notice"><%= notice %></p>

<h1>Listing Offer Boxes</h1>

<table>
  <thead>
    <tr>
      <th>Offer</th>
      <th>Box</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offer_boxes.each do |offer_box| %>
      <tr>
        <td><%= offer_box.offer_id %></td>
        <td><%= offer_box.box_id %></td>
        <td><%= offer_box.quantity %></td>
        <td><%= link_to 'Show', offer_box %></td>
        <td><%= link_to 'Edit', edit_offer_box_path(offer_box) %></td>
        <td><%= link_to 'Destroy', offer_box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

