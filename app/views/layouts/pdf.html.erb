<html>
  <head>
    <title>Rekwup Documents</title>
    <%= wicked_pdf_stylesheet_link_tag 'application', media: 'all' %>
    <%= wicked_pdf_javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta charset="UTF-8">

    <style>
    body {

    }

    main .invoice-background {
      background-color: white;
      margin-left: 10px;
      margin-right: 10px;
    }

    table, th, td {
      border: none;
      font-size: 10px;
    }

    th, tr {
      height: 15px;
    }

    .address-block {
      left: 400px;
      top: 30px;
      font-family: verdana;
      font-size: 10px;
      }

    .doc-date {
      padding-left: 400px;
      margin-top: 10px;
      font-size: 10px;
      }

    .client-block {
      margin-top: 10px;
      font-family: verdana;
      font-size: 10px;
      }

    .article {
      width:100%;
      border: none;
      border-collapse: collapse;
      font-size: 10px;

    }

    .object {
      padding-bottom: 10px;
      font-size: 10px;      
      }

    .bank-block {
      padding-top: 10px;
      padding-bottom: 10px;
      font-size: 10px;
      }

    .communication {
      padding-top: 10px;
      padding-bottom: 10px;
      font-weight: bold;
      font-size: 10px;
    }

    .comment {
      text-align: center;
      font-style: italic;
      font-size: 10px;
      border: 1px solid black;
    }

    .generate {
      background-color: transparent;
      border: none;
    }

    .rekwup-logo {
      position: absolute;
      left: 10px;
      top: 30px;

    }

    .logo-address {
      margin-bottom: 10px;
      font-size: 10px;
    }

    .reference {
      margin-top: 50px;
      font-size: 10px;
    }
    </style>

  </head>
  <body>
    <%= yield %>
  </body>
</html>