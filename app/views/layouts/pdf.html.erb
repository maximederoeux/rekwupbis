<html>
  <head>
    <title>Rekwup Documents</title>
    <%= wicked_pdf_stylesheet_link_tag 'application', media: 'all' %>
    <%= wicked_pdf_javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta charset="UTF-8">

    <style>
    body {
        height: 842px;
        width: 595px;
        /* to centre page on screen*/
        margin-left: 20px;
        margin-right: 20px;
    }

    main .invoice-background {
      background-color: white;
    }

    table, th, td {
      border: none;
      text-align: center;
      font-size: small;
    }

    th, tr {
      height: 25px;
    }

    .address-block {
      left: 400px;
      top: 30px;
      font-family: verdana;
      }

    .doc-date {
      padding-left: 400px;
      margin-top: 10px;
      }

    .client-block {
      margin-top: 10px;
      font-family: verdana;
      font-size: small;
      }

    .article {
      width:100%;
      border: none;
      border-collapse: collapse;

    }

    .object {
      padding-bottom: 20px;
      }

    .bank-block {
      padding-top: 10px;
      padding-bottom: 10px;
      }

    .communication {
      padding-top: 10px;
      padding-bottom: 10px;
      font-weight: bold;
    }

    .comment {
      text-align: center;
      font-style: italic;
      font-size: 12px;
      border: 1px solid black;
    }

    .generate {
      background-color: transparent;
      border: none;
    }

    .rekwup-logo {
      position: absolute;
      left: 10px;
      top: 30px;

    }

    .logo-address {
      margin-bottom: 10px;
    }

    .reference {
      margin-top: 50px;
    }
    </style>

  </head>
  <body>
    <%= yield %>
  </body>
</html>