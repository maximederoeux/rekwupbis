<div class="container-fluid more-padding">
	<ul class="list-group">

		<li class="list-group-item list-group-item-info">
			<h3><%= t("event.edit") %> <%= @event.event_name %></h3>
		</li>


		<% if @event.organizer_id.blank? %>

		<%= render 'organizerform' %>

		<% else %>

		<%= render 'form' %>

		<% end %>

		<%= link_to t("menu.cancel"), events_path, class: "btn btn-lg btn-default pull-right" %>

	</ul>
</div>
