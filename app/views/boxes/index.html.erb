<p id="notice"><%= notice %></p>

<h1>Listing Boxes</h1>

<table>
  <thead>
    <tr>
      <th>Box name</th>
      <th>Box regular</th>
      <th>Box type</th>
      <th>Box detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.box_name %></td>
        <td><%= box.box_regular %></td>
        <td><%= box.box_type %></td>
        <td><%= box.box_detail_id %></td>
        <td><%= link_to 'Show', box %></td>
        <td><%= link_to 'Edit', edit_box_path(box) %></td>
        <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

