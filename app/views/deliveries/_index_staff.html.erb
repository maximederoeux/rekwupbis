            <strong>
              <%= delivery.offer_id %><br>
              <%= delivery.delivery_date %>

              <%= link_to delivery_path(delivery) do %>
                <span class="glyphicon glyphicon-pencil btn btn-default btn-xs" aria-hidden="true"></span>
              <% end %>
            </strong>
          </li>

        <% end %>
      </ul>
    </div>
  </div>