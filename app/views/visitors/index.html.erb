

  <% if user_signed_in? %>

    <% if current_user.name.blank? %>

      <%= render 'index_no_name' %>    

    <% end %>


    <% if current_user.leader %>

      <%= render 'attendance_form' %>

    <% end %>

    <% if current_user.client %>

      <%= render 'index_client' %>

    <% end %>

    <% if current_user.admin %>

      <%= render 'index_admin' %>

    <% end %>


  <% else %>

    <%= render 'not_signed_in' %>
          
  <% end %>

 