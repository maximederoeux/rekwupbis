


    <div class="container-fluid">

      <% if user_signed_in? %>

        <% if @user.name.blank? %>

          <h4>Vous devez compléter votre profil avant de créer un événement.</h4>

          <%= link_to t("user.your_profile"), edit_user_path(@user), class: "btn btn-default" %>

        <% else %>

          <div class="row">
            <div class="col-lg-12">

              <% if @user.client %>
              <%= link_to t("user.your_profile"), user_path(@user), class: "btn btn-default" %>
              <%= link_to t("event.new_event"), new_event_path, class: "btn btn-default" %>
              <% end %>
              <% if @user.staff %>
              <%= link_to t("menu.your_profile"), user_path(@user), class: "btn btn-default" %>
              <% end %>
              <% if @user.admin %>
              <%= link_to t("menu.your_profile"), user_path(@user), class: "btn btn-default" %>
              <%= link_to t("event.new_event"), new_event_path, class: "btn btn-default" %>
              <%= link_to t("article.new_article"), new_article_path, class: "btn btn-default" %>
              <% end %>
      
            </div>
          </div>

        <% end %>
     
      <% else %>

        Bienvenue chez Rekwup!

      <% end %>
    </div>
<br>




